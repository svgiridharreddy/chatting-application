<div class="container">
	<div class="row">
		<div class="col-md-10 ">
			<div class="panel panel-login">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-6">
							<a href="#" class="active" id="login-form-link">Login</a>
						</div>

					</div>
					<hr>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							<div class="form-inputs">
								<%= f.email_field :email, :placeholder => "email", :id => 'email',:class => "form-control", :autofocus => true,:style => "width:100%" %>
							</div>
							<div class="form-group">
								<%= f.password_field :password, :placeholder => "password", :id => 'password',:class => "form-control", :style => "width:100%"%>
							</div>

							<div class="form-actions">
								<%= f.button :submit, "LOGIN", :id => "login-submit",:class => "form-control btn btn-login",:style => "margin-left:0%" %>
							</div>
							<% end %>

						</div>
					</div>
					<%= render "devise/shared/links" %>
				</div>

			</div>
		</div>
	</div>
