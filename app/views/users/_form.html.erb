<div class="container">
  <div class="row">
    <div class="col-md-10">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <a href="#" class="active" id="login-form-link">SignUp</a>
            </div>
            
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= simple_form_for(@user) do |f| %>
              <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>


              <div class="form-inputs">
                
                <%= f.text_field :name, :placeholder => "Name", :id => 'name ',:class => "form-control", :autofocus => true,:style => "width:100%" , label: false %>
              </div>

              <div class="form-inputs">
               
                <%= f.email_field :email, :placeholder => "email", :id => 'email',:class => "form-control",:style => "width:100%", label: false %>
              </div>

              <div class="form-inputs">
                
                <%= f.password_field :password, :placeholder => "password", :id => 'password',:class => "form-control", :style => "width:100%", label: false%>
              </div>

              <div class="form-inputs">
                
                <%= f.password_field :password, :placeholder => "password_confirmation", :id => 'password_confirmation',:class => "form-control", :style => "width:100%", label: false%>
              </div>
              <div class="form-actions">
                <%= f.button :submit,"Sign Up" , :id => "login-submit",:class => "form-control btn btn-login", :style => "margin-left:2%"%>
              </div>
              <% end %>
            </div>
          </div>
        </div>